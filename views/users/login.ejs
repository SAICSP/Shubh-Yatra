<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3"> Login to Shubh Yatra</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="for-label"><b>Username</b></label>
                    <input name="username" required placeholder="enter username here" id="username" type="text"
                        class="form-control">
                    
                </div>
                <div class="mb-3">
                    <label for="password" class="for-label"><b>Password</b></label>
                    <input name="password" required placeholder="enter password here" id="password" type="password"
                        class="form-control">
                </div>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>