<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3"> Signup for Shubh Yatra</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate> 
                <div class="mb-3">
                    <label for="username" class="for-label"><b>Username</b></label>
                    <input 
                    name="username"
                    required 
                    placeholder="enter username here" 
                    id="username" 
                    type="text"
                        class="form-control">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="for-label"><b>Email</b></label>
                    <input name="email" required placeholder="enter email here" id="email" type="email" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="password" class="for-label"><b>Password</b></label>
                    <input name="password" required placeholder="enter password here" id="password" type="password" class="form-control">
                    <div class="valid-feedback">
                        It's Strong
                    </div>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>
    </div>