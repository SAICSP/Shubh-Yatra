<% layout("/layouts/boilerplate") %>
<script>
    const mapToken= "<%= process.env.MAP_TOKEN %>";
    const listing = "<%- JSON.stringify(list) %>";
    

</script>
    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Listing Details</h3>
                <div class="card listing-card" style="width: vw;">
                    <img src="<%= list.image.url %>" class="card-img-top show-img" alt="...">
                    <div class="card-body">
                        <p class="card-text"><b>
                            Owned by <b><i>@<%= list.owner.username%></i></b><br><br>
                                <%= list.title %>
                            </b></p>
                    </div>
                </div>
                <p class="card-text" > <%= list.description %></p>
                    <p class="card-text" >â‚¹<%= list.price.toLocaleString("en-IN") %></p>
                    <p class="card-text" > <%= list.location %></p>
                    
                        <p class="card-text" ><%= list.country %></p>
                    
                <br>
                <% if (currUser && currUser._id.equals(list.owner._id)) { %>
                <div class="row mb-3 mt-3">
                    <div class="mb-3 col-md-4 dsflex mr-3">
                        <a href="/listings/<%= list._id %>/edit" class="btn btn-dark editlist"
                            style="height: auto; padding: 10px 20px; line-height: 1.5;">Edit</a>
                        <br><br>
                        <form method="post" action="/listings/<%= list._id %>/delete?_method=DELETE">
                            <button class="btn btn-dark deletebtn"
                                style="height: auto; padding: 10px 20px; line-height: 1.5;">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
                <br><br>
                <hr>
                <% if(currUser) {%>
                <h4>Leave a Review</h4>
                <form method="post" action="/listings/<%= list.id %>/reviews" novalidate class="needs-validation col-8 offset-2"
                    novalidate>
                    <!-- <div>
                        <label class="form-label" for="rating">Rating</label>
                        <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
                    </div> -->
                    <div class="mb-3 mt-3">
                    <fieldset class="starability-slot">
                        <p>Rating</p>
                        <input 
                        type="radio" 
                        id="no-rate" 
                        class="input-no-rate" 
                        name="review[rating]" 
                        value="1" 
                        checked aria-label="No rating."
                        />
                        <input type="radio"
                        id="first-rate1"
                        name="review[rating]"
                        value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio"
                        id="first-rate2"
                        name="review[rating]"
                        value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio"
                        id="first-rate3"
                        name="review[rating]"
                        value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio"
                        id="first-rate4"
                        name="review[rating]"
                        value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio"
                        id="first-rate5"
                        name="review[rating]"
                        value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    </div>
                    <div>
                        <label class="form-label" for="comment">Comment</label>
                        <textarea required name="review[comment]" id="comment" cols="20" rows="5"
                            class="form-control"></textarea>
                            <div class="invalid-feedback">
                                Please Submit Comments for Review
                            </div>
                    </div><br>
                    <button class="btn btn-outline-success">Submit</button><br><br>
                </form>
                <% } %>
                <% if(list.reviews.length > 0) { %>
                <h4>All Reviews</h4>
                <div class="row">
                <% for(review of list.reviews) { %>
                <div class="card col-5 mb-3 ms-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%=review.author.username %></h5>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>">
                            
                        </p>
                        <p class="card-text" ><%= review.comment %></p>
                    </div>
                    <form method="post" action="/listings/<%=list.id  %>/reviews/<%=review.id  %>?_method=DELETE " class="mb-3">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
                <% } %>
                </div>
                <% } %>
            </div>
            <div class="col-8 offset-2">
                <h3>Where you'll be</h3>
            <div id="map"></div>
            
            </div>
        </div>
    </body>
    <script src="/js/map.js"></script>